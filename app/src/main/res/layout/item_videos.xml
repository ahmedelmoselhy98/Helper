<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tv_meal_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:scaleType="fitXY"
        app:shapeAppearance="@style/roundedImage"
        app:srcCompat="@drawable/meal_test" />

    <TextView
        android:id="@+id/tv_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/tv_meal_icon"
        android:text="Oatmeal Vegetables"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_meal_name"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tv_meal_icon"
        android:text="2 Days ago . 12k ViewsVegetables" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_description"
        android:layout_toEndOf="@id/tv_meal_icon"
        android:drawableTint="@color/yellow"
        android:text="(4.9)"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_baseline_star_16" />
</RelativeLayout>
</androidx.cardview.widget.CardView>