<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <androidx.cardview.widget.CardView
            style="@style/cardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="ACCOUNT" />

                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:text="Profile"
                    app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_18" />

                <TextView
                    android:id="@+id/tvYourOrders"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:padding="8dp"
                    android:text="Your Orders"
                    app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_18" />

                <TextView
                    android:id="@+id/tvRewards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:text="Rewards"
                    app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_18" />

                <TextView
                    android:id="@+id/tvPayment"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:padding="8dp"
                    android:text="Payment"
                    app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_18" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="GENERAL" />

                <TextView
                    android:id="@+id/tvSubscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:text="Subscription"
                    app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_18" />

                <TextView
                    android:id="@+id/tvHelp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:padding="8dp"
                    android:text="Get Help"
                    app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_18" />

                <TextView
                    android:id="@+id/tvAbout"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:padding="8dp"
                    android:text="About"
                    app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_18" />

                <TextView
                    android:id="@+id/tvNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:text="Notifications"
                    app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_ios_18" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>