<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEAF9"
    android:layout_margin="10dp"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:visibility="gone"
        android:id="@+id/ivMeal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/roundedImage"
        app:srcCompat="@drawable/meal_test" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#EEEAF9"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEAF9"
            android:padding="15dp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/video_img"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_margin="15dp"
                android:scaleType="fitXY"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_horizontal"
                app:shapeAppearance="@style/circleImage"
                app:srcCompat="@drawable/man_test"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:visibility="gone"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:scaleType="fitXY"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/circleImage"
                app:srcCompat="@drawable/mask" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/video_img"
                android:layout_margin="15dp"
                android:text="151515"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/cf_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toEndOf="@+id/video_img"
                android:layout_margin="15dp"
                android:text="4564"
                />

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cf_name"
                app:layout_constraintStart_toEndOf="@+id/video_img"
                android:layout_margin="15dp"
                android:drawablePadding="10dp"
                android:text="4564"
                android:drawableStart="@drawable/ic_heart1"
                android:drawableTint="@color/black"
                />

            <TextView
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:drawableStart="@drawable/ic_heart1"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:text="4564"
                app:layout_constraintTop_toBottomOf="@+id/cf_name"
                app:layout_constraintStart_toEndOf="@+id/like" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>