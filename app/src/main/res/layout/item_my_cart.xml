<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivMeal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/meal_test"
        app:shapeAppearance="@style/roundedImage" />

    <TextView
        android:id="@+id/tvMealTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivMeal"
        android:lines="1"
        android:padding="8dp"
        android:text="Crispy Chicken San"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMealDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMealTitle"
        android:layout_toEndOf="@id/ivMeal"
        android:lines="2"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="2x tuna sahimi, 3x vegetables, 1x noodle." />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMealDesc"
        android:layout_toEndOf="@id/ivMeal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="AED 29.50"
        android:textColor="@color/red" />

    <View
        android:layout_below="@id/tvPrice"
        android:background="#EFEFF4"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>